<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_news"
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_image_height"
        android:layout_marginTop="@dimen/image_news_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_news_text"
        android:paddingEnd="@dimen/padding_news_text"
        app:layout_constraintEnd_toEndOf="@+id/image_news"
        app:layout_constraintTop_toBottomOf="@id/image_news"
        tools:text="Date" />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_header_news"
        android:layout_marginEnd="@dimen/margin_end_header_news"
        android:paddingStart="@dimen/padding_header_news_text"
        android:paddingEnd="@dimen/padding_header_news_text"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_header_news"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_news"
        tools:text="Hello" />

    <TextView
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_summary_news"
        android:layout_marginEnd="@dimen/margin_end_summary_news"
        android:layout_marginBottom="@dimen/margin_bottom_summary_news"
        android:paddingStart="@dimen/padding_summary"
        android:paddingEnd="@dimen/padding_summary"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_summary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_title"
        tools:text="Hello" />

</androidx.constraintlayout.widget.ConstraintLayout>